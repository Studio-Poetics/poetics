{
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.2.22"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ],
      "has": [
        {
          "type": "host",
          "value": "(?!poetics\\.studio$).*"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/:path((?!api).*)",
      "has": [
        {
          "type": "host",
          "value": "(.+)\\.vercel\\.app"
        }
      ],
      "destination": "https://poetics.studio/:path*",
      "permanent": true
    }
  ]
}
